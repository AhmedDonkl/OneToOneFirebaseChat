<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/user_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- feed image -->
        <ImageView
            android:id="@+id/user_feed_item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            />

        <RelativeLayout
            android:padding="@dimen/search_view_inset"
            android:layout_below="@+id/user_feed_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <me.grantland.widget.AutofitTextView
                android:id="@+id/user_feed_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_centerHorizontal="true"
                android:maxLines="1"/>

            <me.grantland.widget.AutofitTextView
                android:layout_marginTop="@dimen/search_view_inset"
                android:layout_below="@+id/user_feed_item_name"
                android:id="@+id/user_feed_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


